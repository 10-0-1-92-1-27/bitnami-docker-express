{
  "v": "4.0",
  "workspace": {
    "name": "express",
    "defaultEnv": "express",
    "environments": [
      {
        "name": "express",
        "recipe": null,
        "machineConfigs": [
          {
            "name": "ws-machine",
            "limits": {
              "ram": 1000
            },
            "source": {
              "type": "dockerfile",
              "location": "https://raw.githubusercontent.com/amrecio/bitnami-docker-express/che-mongodb/.codenvy.dockerfile"
            },
            "type": "docker",
            "dev": true
          }
        ]
      }
    ],
    "projects": [
      {
        "name": "express-sample",
        "type": "node-js",
        "path": "/express-sample",
        "source": {
          "type": "git",
          "location": "https://github.com/amrecio/bitnami-docker-express",
          "parameters": {
            "branch": "che-mongodb",
            "keepVcs": "true"
          }
        },
        "mixins": [
          "git",
          "pullrequest"
        ],
        "attributes": {
          "local_branch": [ "che-mongodb" ],
          "contribute_to_branch" : [ "master" ]
        },
        "modules": [],
        "problems": []
      }
    ],
    "commands": [
      {
        "name": "create sample project",
        "type": "custom",
        "commandLine": "cd ${current.project.path} && npm install express@4.13.4 && express -f . && npm install mongodb@2.1.18 --save && npm install && counter=0; until nc -z localhost 27017; do counter=$((counter+1)); if [ $counter == 10 ]; then echo \"Error: Couldn't connect to MongoDB.\"; exit 1; fi; echo \"Trying to connect to MongoDB at localhost. Attempt $counter.\"; sleep 5; done; echo \"Connected to MongoDB database\" && echo \"Sample project created. You may close this window.\"",
        "attributes": {}
      },
      {
        "name": "start",
        "type": "custom",
        "commandLine": "cd ${current.project.path} && npm start",
        "attributes": {
          "previewUrl": "http://${server.port.3000}/"
        }
      }
    ]
  },
  "ide": {
    "onProjectsLoaded": {
      "actions": [
        {
          "id": "runCommand",
          "properties": {
            "name": "create sample project"
          }
        },
        {
          "id" : "openWelcomePage",
          "properties" : {
            "authenticatedContentUrl"    : "http://media.npr.org/images/picture-show-flickr-promo.jpg",
            "authenticatedIconUrl"       : "https://bitnami.com/downloads/logos/bitnami-mark.png",
            "authenticatedTitle"         : "Welcome to the Bitnami Express development container!",
            "authenticatedNotification"  : "A new sample project is being generated just for you. Keep an eye on the window at the botton of the screen.",
            "nonAuthenticatedContentUrl" : "http://media.npr.org/images/picture-show-flickr-promo.jpg",
            "nonAuthenticatedIconUrl"    : "https://bitnami.com/downloads/logos/bitnami-mark.png",
            "nonAuthenticatedTitle"      : "Welcome to the Bitnami Express development container!"
          }
        }
      ]
    }
  }
}
